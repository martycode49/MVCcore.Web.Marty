@model MVCcore.Web.Marty.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    @* cette methode POST aura besoin d'une méthode http post dans CategoryController*@
    <input asp-for="Id" hidden /> @* Important de rajouter cette ligne car dans le update le Id ne doit pat être transférer dans l'objet
        // car il est en parametre de méthode'*@
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* gestion Annotation [Required] du model*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        @*Utilisation du Tag Helper*@
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disable class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" disable class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>



