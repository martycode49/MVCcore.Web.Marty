@model IEnumerable<MVCcore.Web.Marty.Models.Category>
@{
    ViewData["Title"] = "Index";
}

@*Création du link CREATE ROW et utilisation de boostrap*@ 
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Category
            </a>

        </div>
    </div>

    <br /><br />
    
    @* Création de la table des datas*@

    @if(Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style=" width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>edit/delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.DisplayOrder</td>
                    @* Manage Edit / Delete methods *@
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Category" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>

                    </td>
                </tr>
                }
            </tbody>
        </table>
     }
    else
            {
                <p>No Items exists</p>
            }
    

</div>

